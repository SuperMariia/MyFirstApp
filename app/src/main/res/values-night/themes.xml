<resources>
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_yellow</item>
        <item name="colorPrimaryDark">@color/yellow_sand</item>
        <item name="colorAccent">@color/blue_blend</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/dark_brown</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Theme.Calculator.Button.All" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_blend</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Theme.Calculator.Button.All.Equal" parent="Theme.Calculator.Button.All">
        <item name="backgroundTint">@color/blue_blend</item>
    </style>
</resources>